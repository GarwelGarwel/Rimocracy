	<Rimocracy.PoliticalActionDef ParentName="BasePoliticalAction">
		<defName>SettlementAttack</defName>
		<label>settlement attack</label>
		<considerations>
			<li>
				<label>I don't fight</label>
				<support>-20</support>
				<isCapableOfViolence>false</isCapableOfViolence>
			</li>
			<li>
				<label>goodwill</label>
				<targetFactionGoodwill>
					<offset>
						<points>
							<li>(-100, 10)</li>
							<li>(100, -10)</li>
						</points>
					</offset>
				</targetFactionGoodwill>
			</li>
			<li>
				<label>opinion of faction leader</label>
				<opinionOfTarget>
					<offset>
						<points>
							<li>(-100, 10)</li>
							<li>(100, -10)</li>
						</points>
					</offset>
				</opinionOfTarget>
			</li>
			<li>
				<label>bloodlust</label>
				<support>10</support>
				<trait>Bloodlust</trait>
			</li>
			<li>
				<label>brawler</label>
				<support>10</support>
				<trait>Brawler</trait>
			</li>
			<li>
				<label>tough</label>
				<support>5</support>
				<trait>Tough</trait>
			</li>
			<li>
				<label>kind</label>
				<support>-10</support>
				<trait>Kind</trait>
			</li>
			<li>
				<label>wimp</label>
				<support>-5</support>
				<trait>Wimp</trait>
			</li>
			<li>
				<label>chance to prove my worth</label>
				<support>5</support>
				<succession>Martial</succession>
				<isCapableOfViolence>true</isCapableOfViolence>
			</li>
			<li>
				<label>supremacist ideology</label>
				<support>10</support>
				<meme>Supremacist</meme>
			</li>
			<li>
				<label>raider ideology</label>
				<support>10</support>
				<meme>Raider</meme>
			</li>
			<li>
				<label>cannibalism ideology</label>
				<support>5</support>
				<meme>Cannibal</meme>
			</li>
			<li>
				<label>guilty ideology</label>
				<support>-5</support>
				<meme>Guilty</meme>
			</li>
			<li>
				<label>raiding is respected</label>
				<support>3</support>
				<precept>Raiding_Respected</precept>
			</li>
			<li>

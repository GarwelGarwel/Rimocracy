<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<Rimocracy.ProtestDef>
		<defName>Emigration</defName>
		<description>{PAWN} is disloyal to {NATION} and decides to emigrate.</description>
		<weight>
			<value>0.5</value>
			<population>
				<greaterThan>1</greaterThan>
			</population>
		</weight>
		<mentalState>GiveUpExit</mentalState>
		<critical>true</critical>
	</Rimocracy.ProtestDef>
	
	<Rimocracy.ProtestDef>
		<defName>Riot</defName>
		<description>{PAWN} decides to crush things in protest.</description>
		<weight>
			<factors>
				<li>
					<value>2</value>
					<trait>Bloodlust</trait>
				</li>
				<li>
					<value>1.5</value>
					<trait>Psychopath</trait>
				</li>
				<li>
					<value>1.5</value>
					<trait>Brawler</trait>
				</li>
				<li>
					<value>0.25</value>
					<trait>Kind</trait>
				</li>
			</factors>
		</weight>
		<mentalState>Tantrum</mentalState>
		<critical>true</critical>
	</Rimocracy.ProtestDef>
	
	<Rimocracy.ProtestDef>
		<defName>Strike</defName>
		<description>{PAWN} refuses to work in protest.</description>
		<weight>
			<factors>
				<li>
					<value>0.5</value>
					<trait>Industriousness</trait>
					<traitDegree>2</traitDegree>
				</li>
				<li>
					<value>0.75</value>
					<trait>Industriousness</trait>
					<traitDegree>1</traitDegree>
				</li>
				<li>
					<value>1.25</value>
					<trait>Industriousness</trait>
					<traitDegree>-1</traitDegree>
				</li>
				<li>
					<value>1.5</value>
					<trait>Industriousness</trait>
					<traitDegree>-2</traitDegree>
				</li>
			</factors>
		</weight>
		<mentalState>Wander_Sad</mentalState>
	</Rimocracy.ProtestDef>

	<Rimocracy.ProtestDef>
		<defName>SitIn</defName>
		<description>{PAWN} refuses to work and locks in {PAWN_possessive} room in protest.</description>
		<mentalState>Wander_OwnRoom</mentalState>
	</Rimocracy.ProtestDef>

</Defs>

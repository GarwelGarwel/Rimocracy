<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<Rimocracy.PoliticalActionDef>
		<defName>Arrest</defName>
		<label>arrest</label>
		<considerations>
			<li>
				<label>No reason for arrest</label>
				<support>-5</support>
				<targetIsColonist>true</targetIsColonist>
				<targetInAggroMentalState>false</targetInAggroMentalState>
			</li>
			<li>
				<label>I don't want to be arrested!</label>
				<support>-50</support>
				<all>
					<li Class="Rimocracy.Consideration">
						<isTarget>true</isTarget>
					</li>
					<li Class="Rimocracy.Consideration">
						<trait>Masochist</trait>
						<inverted>true</inverted>
					</li>
				</all>
			</li>
			<li>
				<label>Opinion of {TARGET}</label>
				<isTarget>false</isTarget>
				<opinionOfTarget>
					<offset>
						<points>
							<li>(-100, 25)</li>
							<li>(100, -25)</li>
						</points>
					</offset>
				</opinionOfTarget>
			</li>
			<li>
				<label>{TARGET} is a leader</label>
				<support>-10</support>
				<targetIsLeader>true</targetIsLeader>
			</li>
		</considerations>
		<governanceChangeIfSupported>0.05</governanceChangeIfSupported>
		<governanceChangeIfOpposed>-0.05</governanceChangeIfOpposed>
		<preActionPatch>
			<patchClass>Verse.AI.Group.Lord</patchClass>
			<patchMethod>Notify_PawnAttemptArrested</patchMethod>
			<targetArgument>1</targetArgument>
		</preActionPatch>
		<postActionPatch>
			<patchClass>Verse.AI.Group.Lord</patchClass>
			<patchMethod>Notify_PawnAttemptArrested</patchMethod>
			<targetArgument>1</targetArgument>
		</postActionPatch>
	</Rimocracy.PoliticalActionDef>

	<Rimocracy.PoliticalActionDef>
		<defName>Execution</defName>
		<label>execution</label>
		<considerations>
			<li>
				<label>Killing people is bad</label>
				<support>-10</support>
				<all>
					<li Class="Rimocracy.Consideration">
						<trait>Psychopath</trait>
						<inverted>true</inverted>
					</li>
					<li Class="Rimocracy.Consideration">
						<trait>Bloodlust</trait>
						<inverted>true</inverted>
					</li>
				</all>
			</li>
			<li>
				<label>I like hurting people</label>
				<support>15</support>
				<trait>Bloodlust</trait>
				<isTarget>false</isTarget>
			</li>
			<li>
				<label>Kind</label>
				<support>-10</support>
				<trait>Kind</trait>
			</li>
			<li>
				<label>{TARGET} is a fellow colonist</label>
				<support>-10</support>
				<all>
					<li Class="Rimocracy.Consideration">
						<targetIsColonist>true</targetIsColonist>
						<isTarget>false</isTarget>
					</li>
					<li Class="Rimocracy.Consideration">
						<trait>Psychopath</trait>
						<inverted>true</inverted>
					</li>
				</all>
			</li>
			<li>
				<label>I want to live!</label>
				<support>-100</support>
				<isTarget>true</isTarget>
			</li>
			<li>
				<label>Opinion of {TARGET}</label>
				<opinionOfTarget>
					<offset>
						<points>
							<li>(-100, 20)</li>
							<li>(100, -20)</li>
						</points>
					</offset>
				</opinionOfTarget>
			</li>
		</considerations>
		<governanceChangeIfSupported>0.10</governanceChangeIfSupported>
		<governanceChangeIfOpposed>-0.10</governanceChangeIfOpposed>
		<preActionPatch>
			<patchClass>RimWorld.ExecutionUtility</patchClass>
			<patchMethod>DoExecutionByCut</patchMethod>
			<targetArgument>2</targetArgument>
		</preActionPatch>
		<postActionPatch>
			<patchClass>RimWorld.ExecutionUtility</patchClass>
			<patchMethod>DoExecutionByCut</patchMethod>
			<targetArgument>2</targetArgument>
		</postActionPatch>
	</Rimocracy.PoliticalActionDef>

	<Rimocracy.PoliticalActionDef>
		<defName>Banishment</defName>
		<label>banishment</label>
		<considerations>
			<li>
				<label>Banishment is cruel</label>
				<support>-10</support>
				<trait>Psychopath</trait>
				<inverted>true</inverted>
			</li>
			<li>
				<label>I don't want to be banished!</label>
				<support>-50</support>
				<isTarget>true</isTarget>
			</li>
			<li>
				<label>Kind</label>
				<support>-10</support>
				<trait>Kind</trait>
			</li>
			<li>
				<label>Opinion of {TARGET}</label>
				<opinionOfTarget>
					<offset>
						<points>
							<li>(-100, 20)</li>
							<li>(100, -20)</li>
						</points>
					</offset>
				</opinionOfTarget>
			</li>
		</considerations>
		<governanceChangeIfSupported>0.10</governanceChangeIfSupported>
		<governanceChangeIfOpposed>-0.10</governanceChangeIfOpposed>
		<preActionPatch>
			<patchClass>RimWorld.PawnBanishUtility</patchClass>
			<patchMethod>Banish</patchMethod>
			<targetArgument>1</targetArgument>
		</preActionPatch>
		<postActionPatch>
			<patchClass>RimWorld.PawnBanishUtility</patchClass>
			<patchMethod>Banish</patchMethod>
			<targetArgument>1</targetArgument>
		</postActionPatch>
	</Rimocracy.PoliticalActionDef>

</Defs>

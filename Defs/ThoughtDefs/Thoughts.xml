<?xml version="1.0" encoding="utf-8" ?>

<Defs>

	<ThoughtDef>
		<defName>Respect</defName>
		<thoughtClass>Thought_SituationalSocial</thoughtClass>
		<workerClass>Rimocracy.ThoughtWorker_Respect</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<nullifiedIfNotColonist>true</nullifiedIfNotColonist>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>useless "leader"</label>
				<baseOpinionOffset>-30</baseOpinionOffset>
			</li>
			<li>
				<label>poor leader</label>
				<baseOpinionOffset>-20</baseOpinionOffset>
			</li>
			<li>
				<label>our leader</label>
				<baseOpinionOffset>5</baseOpinionOffset>
			</li>
			<li>
				<label>respected leader</label>
				<baseOpinionOffset>10</baseOpinionOffset>
			</li>
			<li>
				<label>revered leader</label>
				<baseOpinionOffset>30</baseOpinionOffset>
			</li>
			<!-- Cult of Personality stages: -->
			<li>
				<label>hated "leader"</label>
				<baseOpinionOffset>-60</baseOpinionOffset>
			</li>
			<li>
				<label>terribleleader</label>
				<baseOpinionOffset>-40</baseOpinionOffset>
			</li>
			<li>
				<label>our dear leader</label>
				<baseOpinionOffset>10</baseOpinionOffset>
			</li>
			<li>
				<label>our beloved leader</label>
				<baseOpinionOffset>20</baseOpinionOffset>
			</li>
			<li>
				<label>our great leader</label>
				<baseOpinionOffset>60</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ElectionCompetitor</defName>
		<thoughtClass>Thought_SituationalSocial</thoughtClass>
		<workerClass>Rimocracy.ThoughtWorker_Competitor</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<nullifiedIfNotColonist>true</nullifiedIfNotColonist>
		<nullifyingTraits>
			<li>Kind</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>supports different candidate</label>
				<baseOpinionOffset>-5</baseOpinionOffset>
			</li>
			<li>
				<label>not my candidate</label>
				<baseOpinionOffset>-10</baseOpinionOffset>
			</li>
			<li>
				<label>my competitor</label>
				<baseOpinionOffset>-20</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ElectionSupporter</defName>
		<thoughtClass>Thought_SituationalSocial</thoughtClass>
		<workerClass>Rimocracy.ThoughtWorker_Supporter</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<nullifiedIfNotColonist>true</nullifiedIfNotColonist>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>supports same candidate</label>
				<baseOpinionOffset>5</baseOpinionOffset>
			</li>
			<li>
				<label>supports me</label>
				<baseOpinionOffset>10</baseOpinionOffset>
			</li>
			<li>
				<label>my candidate</label>
				<baseOpinionOffset>15</baseOpinionOffset>
			</li>
		</stages>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ElectionCompetitorMemory</defName>
		<thoughtClass>Thought_MemorySocial</thoughtClass>
		<validWhileDespawned>true</validWhileDespawned>
		<nullifiedIfNotColonist>true</nullifiedIfNotColonist>
		<nullifyingTraits>
			<li>Kind</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>ran against me</label>
				<baseOpinionOffset>-10</baseOpinionOffset>
			</li>
		</stages>
		<durationDays>3</durationDays>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ElectionOutcome</defName>
		<stages>
			<li>
				<label>i lost election</label>
				<description>This loss hurts.</description>
				<baseMoodEffect>-5</baseMoodEffect>
			</li>
			<li>
				<label>i won election</label>
				<description>People have trusted me to lead this nation!</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
			<li>
				<label>my candidate lost</label>
				<description>What a disappointment!</description>
				<baseMoodEffect>-2</baseMoodEffect>
			</li>
			<li>
				<label>my candidate won</label>
				<description>We made it!</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
		<durationDays>5</durationDays>
		<nullifiedIfNotColonist>true</nullifiedIfNotColonist>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ImpeachedMemory</defName>
		<stages>
			<li>
				<label>impeached</label>
				<description>These idiots booted me from office!</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
		</stages>
		<durationDays>5</durationDays>
	</ThoughtDef>

	<ThoughtDef>
		<defName>DecisionMade</defName>
		<stages>
			<li>
				<label>dislike decision</label>
				<description>A decision was taken despite my opposition. They don't care about my opinion!</description>
				<baseMoodEffect>-3</baseMoodEffect>
			</li>
			<li>
				<label>like decision</label>
				<description>I'm glad that a right decision was taken.</description>
				<baseMoodEffect>2</baseMoodEffect>
			</li>
		</stages>
		<stackLimit>3</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<durationDays>15</durationDays>
		<nullifiedIfNotColonist>true</nullifiedIfNotColonist>
	</ThoughtDef>

	<ThoughtDef>
		<defName>PoliticalSympathy</defName>
		<thoughtClass>Thought_MemorySocial</thoughtClass>
		<stages>
			<li>
				<label>political sympathy</label>
				<baseOpinionOffset>1</baseOpinionOffset>
			</li>
		</stages>
		<stackLimit>4</stackLimit>
		<stackedEffectMultiplier>1</stackedEffectMultiplier>
		<durationDays>3</durationDays>
		<validWhileDespawned>true</validWhileDespawned>
		<nullifiedIfNotColonist>true</nullifiedIfNotColonist>
		<stackLimitForSameOtherPawn>4</stackLimitForSameOtherPawn>
		<lerpOpinionToZeroAfterDurationPct>0.5</lerpOpinionToZeroAfterDurationPct>
	</ThoughtDef>

	<ThoughtDef>
		<defName>ResPublica</defName>
		<thoughtClass>Thought_Situational</thoughtClass>
		<workerClass>Rimocracy.ThoughtWorker_ResPublica</workerClass>
		<validWhileDespawned>true</validWhileDespawned>
		<nullifiedIfNotColonist>true</nullifiedIfNotColonist>
		<nullifyingTraits>
			<li>Psychopath</li>
		</nullifyingTraits>
		<stages>
			<li>
				<label>terrible government</label>
				<description>This government is a joke!</description>
				<baseMoodEffect>-20</baseMoodEffect>
			</li>
			<li>
				<label>bad government</label>
				<description>What am I paying my taxes for?</description>
				<baseMoodEffect>-10</baseMoodEffect>
			</li>
			<li>
				<label>just government</label>
				<description>Our country has a decent political system.</description>
				<baseMoodEffect>10</baseMoodEffect>
			</li>
			<li>
				<label>proud of my government</label>
				<description>We are undoubtedly the most enlightened country on this planet!</description>
				<baseMoodEffect>20</baseMoodEffect>
			</li>
		</stages>
	</ThoughtDef>

</Defs>
